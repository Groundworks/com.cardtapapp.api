# Redirect Lost Users

POST /register            controllers.Application.register
GET  /login/*secret       controllers.Application.login(secret)
POST /share/*secret       controllers.Application.share(secret)
GET  /auth/*devcode       controllers.Application.auth(devcode)
POST /card/*devcode       controllers.Application.card(devcode)
GET  /assets/*file        controllers.Assets.at(path="/public", file)
GET  /status              controllers.Application.status

# Card and Account Management

POST /stack/*devcode      controllers.Application.stack(devcode)
POST /cards/*devcode      controllers.Application.cards(devcode)

# Administrative Functions - Not For Production

GET  /poll/*secret        controllers.Application.poll(secret)
